---
apiVersion: v1
kind: Service
metadata:
  labels:
    service: web
  name: web
spec:
  ports:
    - name: http
      protocol: TCP
      port: 80
      targetPort: 3000
  selector:
    service: web
  type: NodePort
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    service: web
  name: web
spec:
  replicas: 3
  selector:
    matchLabels:
      service: web
  template:
    metadata:
      labels:
        service: web
    spec:
      serviceAccountName: scorpion-production
      containers:
        - name: web
          args:
            - bundle
            - exec
            - rails
            - s
            - -p
            - "3000"
            - -b
            - 0.0.0.0
          env: <%= partial "rails_environment", expose_contents_as_variable: true %>
          volumeMounts: <%= partial "rails_volume_mounts" %>
          image: gcr.io/superpro-production/scorpion-core:<%= current_sha %>
          ports:
            - containerPort: 3000
          securityContext:
            capabilities:
              add:
                - SYS_PTRACE
          readinessProbe:
            httpGet:
              path: /health_check
              port: 3000
            periodSeconds: 1
            timeoutSeconds: 1
            successThreshold: 1
            failureThreshold: 10
      volumes: <%= partial "rails_volumes" %>
      restartPolicy: Always
