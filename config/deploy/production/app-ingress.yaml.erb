---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: app-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/client-body-buffer-size: 2M
    nginx.ingress.kubernetes.io/proxy-body-size: 10M
spec:
  tls:
    - secretName: scorpion.gadget.dev-production
      hosts:
        - scorpion.gadget.dev
  rules:
    - host: scorpion.gadget.dev
      http:
        paths:
          - backend:
              serviceName: web
              servicePort: 80
