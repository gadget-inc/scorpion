# kubeval-ignore
---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: scorpion.io-production
spec:
  secretName: scorpion.io-production
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  dnsNames:
    - "app.scorpion.io"
  acme:
    config:
      - dns01:
          provider: gke-clouddns
        domains:
          - "app.scorpion.io"
