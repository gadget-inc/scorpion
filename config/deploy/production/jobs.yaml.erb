---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    service: jobs
  name: jobs
spec:
  replicas: 2
  selector:
    matchLabels:
      service: jobs
  template:
    metadata:
      creationTimestamp: null
      labels:
        service: jobs
    spec:
      serviceAccountName: scorpion-production
      containers:
        - name: jobs
          image: "gcr.io/superpro-production/scorpion-core:<%= current_sha %>"
          args:
            - bundle
            - exec
            - que
            - -q
            - default
            - -q
            - mailers
          env: <%= partial "rails_environment", expose_contents_as_variable: true %>
          volumeMounts: <%= partial "rails_volume_mounts" %>
          resources: {}
          securityContext:
            capabilities:
              add:
                - SYS_PTRACE
      restartPolicy: Always
      volumes: <%= partial "rails_volumes" %>
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    service: crawl-jobs
  name: crawl-jobs
spec:
  replicas: 4
  selector:
    matchLabels:
      service: crawl-jobs
  template:
    metadata:
      labels:
        service: crawl-jobs
    spec:
      serviceAccountName: scorpion-production
      containers:
        - name: jobs
          image: "gcr.io/superpro-production/scorpion-core:<%= current_sha %>"
          args:
            - bundle
            - exec
            - que
            - -q
            - crawls
            - -q
            - crawl_tests
          env: <%= partial "rails_environment", expose_contents_as_variable: true %>
          volumeMounts: <%= partial "rails_volume_mounts" %>
          resources: {}
          securityContext:
            capabilities:
              add:
                - SYS_PTRACE
      restartPolicy: Always
      volumes: <%= partial "rails_volumes" %>
